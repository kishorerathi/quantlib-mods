    <Member name='qlSwaptionImpliedVolatility' type='QuantLib::Swaption'>
      <description>returns the implied volatility for the given Swaption object</description>
      <libraryFunction>impliedVolatility</libraryFunction>
      <SupportedPlatforms>
        <!--SupportedPlatform name='Excel' calcInWizard='false'/-->
        <SupportedPlatform name='Excel'/>
        <!--SupportedPlatform name='Cpp'/-->
      </SupportedPlatforms>
      <ParameterList>
        <Parameters>
          <Parameter name='Price' exampleValue ='0.2'>
            <type>QuantLib::Real</type>
            <tensorRank>scalar</tensorRank>
            <description>Price used to infer the implied volatility</description>
          </Parameter>
          <Parameter name='YieldCurve' >
            <type>QuantLib::YieldTermStructure</type>
            <superType>libToHandle</superType>
            <tensorRank>scalar</tensorRank>
            <description>discounting yield term structure object ID</description>
          </Parameter>
          <Parameter name='Accuracy' >
            <type>QuantLib::Real</type>
            <tensorRank>scalar</tensorRank>
            <description></description>
          </Parameter>
          <Parameter name='MaxIter' >
            <type>QuantLib::Size</type>
            <tensorRank>scalar</tensorRank>
            <description>max iterations</description>
          </Parameter>
        </Parameters>
      </ParameterList>
      <ReturnValue>
        <type>double</type>
        <tensorRank>scalar</tensorRank>
      </ReturnValue>
    </Member>

