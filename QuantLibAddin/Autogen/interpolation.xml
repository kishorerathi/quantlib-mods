<?xml version='1.0'?>
<!-- DOCTYPE functiongroup SYSTEM 'functiongroup.dtd' -->
<functiongroup>
<headeronly>false</headeronly>
<desc>functions to carry out interpolations</desc>
<displayname>Interpolation</displayname>
<functions>

<function>
<name>QL_LINEAR_INTERPOLATION</name>
<codename>qlLinearInterpolation</codename>
<desc>construct and return a handle to a linear interpolator</desc>
<constructor>true</constructor>
<qlfunction>LinearInterpolation</qlfunction>
<parameters>
    <param>
        <name>allowExtrapolation</name>
        <type>bool</type>
        <tensorrank>scalar</tensorrank>
        <desc>allow extrapolation flag</desc>
    </param>
</parameters>
<returnval>
    <type>string</type>
    <tensorrank>scalar</tensorrank>
    <desc>handle of newly created object</desc>
</returnval>
</function>

<function>
<name>QL_CUBIC_SPLINE_INTERPOLATION</name>
<codename>qlCubicSplineInterpolation</codename>
<desc>construct and return a handle to a cubic spline interpolator</desc>
<constructor>true</constructor>
<qlfunction>CubicSplineInterpolation</qlfunction>
<parameters>
    <param>
        <name>allowExtrapolation</name>
        <type>bool</type>
        <tensorrank>scalar</tensorrank>
        <desc>allow extrapolation flag</desc>
    </param>
    <param>
        <name>leftConditionType</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>left boundary condition (NotAKnot, FirstDerivative, SecondDerivative, Periodic, Lagrange)</desc>
    </param>
    <param>
        <name>leftConditionValue</name>
        <type>double</type>
        <tensorrank>scalar</tensorrank>
        <desc>left condition value</desc>
    </param>
    <param>
        <name>rightConditionType</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>right boundary condition (NotAKnot, FirstDerivative, SecondDerivative, Periodic, Lagrange)</desc>
    </param>
    <param>
        <name>rightConditionValue</name>
        <type>double</type>
        <tensorrank>scalar</tensorrank>
        <desc>right condition value</desc>
    </param>
    <param>
        <name>monotonicityConstraint</name>
        <type>bool</type>
        <tensorrank>scalar</tensorrank>
        <desc>monotonicity constraint flag</desc>
    </param>
</parameters>
<returnval>
    <type>string</type>
    <tensorrank>scalar</tensorrank>
    <desc>handle of newly created object</desc>
</returnval>
</function>

<function>
<name>QL_INTERPOLATE</name>
<codename>qlInterpolate</codename>
<desc>carry out interpolation</desc>
<constructor>false</constructor>
<qlfunction>interpolate</qlfunction>
<parameters>
    <param class='Interpolation'>
        <name>handle</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>handle of interpolator</desc>
    </param>
    <param>
        <name>xArray</name>
        <type>double</type>
        <tensorrank>matrix</tensorrank>
        <desc>x array</desc>
    </param>
    <param>
        <name>yArray</name>
        <type>double</type>
        <tensorrank>matrix</tensorrank>
        <desc>y array</desc>
    </param>
    <param>
        <name>xValues</name>
        <type>double</type>
        <tensorrank>matrix</tensorrank>
        <desc>x values</desc>
    </param>
</parameters>
<returnval>
    <type>double</type>
    <tensorrank>matrix</tensorrank>
    <desc>interpolated y values</desc>
</returnval>
</function>

</functions>
</functiongroup>

