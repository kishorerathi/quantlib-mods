<?xml version='1.0'?>
<!-- DOCTYPE functiongroup SYSTEM 'functiongroup.dtd' -->
<functiongroup>
<headeronly>false</headeronly>
<desc>functions to construct QuantLib cap/floor objects</desc>
<displayname>Caps/Floors</displayname>
<functions>

<function>
<name>QL_ANALYTIC_CAPFLOOR_ENGINE</name>
<codename>qlAnalyticCapFloorEngine</codename>
<desc>construct and return a pricing engine for cap/foors</desc>
<constructor>true</constructor>
<qlfunction>AnalyticCapFloorEngine</qlfunction>
<parameters>
    <param class='AffineModel'>
        <name>handleModel</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>affine model (providing a discount bond option pricing formula)</desc>
    </param>
</parameters>
<returnval>
    <type>property</type>
    <tensorrank>vector</tensorrank>
    <desc>vector of properties describing engine</desc>
</returnval>
</function>

<function>
<name>QL_CAPFLOOR</name>
<codename>qlCapFloor</codename>
<desc>construct and return a handle to a cap/floor object</desc>
<constructor>true</constructor>
<qlfunction>CapFloor</qlfunction>
<parameters>
    <param>
        <name>startDate</name>
        <type>long</type>
        <tensorrank>scalar</tensorrank>
        <desc>start date of capping period</desc>
    </param>
    <param>
        <name>endDate</name>
        <type>long</type>
        <tensorrank>scalar</tensorrank>
        <desc>end of capping period</desc>
    </param>
    <param class='YieldTermStructure'>
        <name>handleTermStructure</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>handle to term structure</desc>
    </param>
    <param class='Xibor'>
        <name>handleIndex</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>handle to underlying index</desc>
    </param>
    <param>
        <name>nominals</name>
        <type>double</type>
        <tensorrank>vector</tensorrank>
        <desc>nominals</desc>
    </param>
    <param>
        <name>capStrikes</name>
        <type>double</type>
        <tensorrank>vector</tensorrank>
        <desc>cap strikes</desc>
    </param>
    <param>
        <name>floorStrikes</name>
        <type>double</type>
        <tensorrank>vector</tensorrank>
        <desc>floor strikes</desc>
    </param>
    <param class='AnalyticCapFloorEngine'>
        <name>handleEngine</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>handle to pricing engine</desc>
    </param>
    <param>
        <name>optionType</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>option type (cap, floor or collar)</desc>
    </param>
</parameters>
<returnval>
    <type>property</type>
    <tensorrank>vector</tensorrank>
    <desc>(nil)</desc>
</returnval>
</function>

<function>
<name>QL_CAPFLOOR_LEG</name>
<codename>qlCapFloorLeg</codename>
<desc>Cash-flows</desc>
<constructor>false</constructor>
<qlfunction>cashFlows</qlfunction>
<parameters>
    <param class='CapFloor'>
        <name>handle</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>handle of cap/floor object</desc>
    </param>
    <param ignore='yes'>
        <name>trigger</name>
        <type>double</type>
        <tensorrank>scalar</tensorrank>
        <desc>dependency tracking trigger</desc>
    </param>
</parameters>
<returnval>
    <type>double</type>
    <tensorrank>matrix</tensorrank>
    <desc>cash-flows</desc>
</returnval>
</function>

</functions>
</functiongroup>

