<?xml version='1.0'?>
<!-- DOCTYPE functiongroup SYSTEM 'functiongroup.dtd' -->
<functiongroup>
<headeronly>false</headeronly>
<desc>functions to construct QuantLib coupon vector objects</desc>
<displayname>Coupon Vectors</displayname>
<functions>

<function>
<name>qlFixedRateCouponVector</name>
<desc>construct and return a handle to a fixed rate coupon vector</desc>
<constructor>true</constructor>
<qlfunction>FixedRateCouponVector</qlfunction>
<parameters>
    <param>
        <name>scheduleID</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>schedule</desc>
    </param>
    <param>
        <name>conventionID</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>payment adjustment</desc>
    </param>
    <param>
        <name>nominals</name>
        <type>double</type>
        <tensorrank>vector</tensorrank>
        <desc>coupon nominals</desc>
    </param>
    <param>
        <name>couponRates</name>
        <type>double</type>
        <tensorrank>vector</tensorrank>
        <desc>coupon fixed rates</desc>
    </param>
	<param>
        <name>dayCountID</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>day counter</desc>
    </param>
</parameters>
<returnval>
    <type>string</type>
    <tensorrank>scalar</tensorrank>
    <desc>handle of newly created object</desc>
</returnval>
</function>

<function>
<name>qlFloatingRateCouponVector</name>
<desc>construct and return a handle to a floating rate coupon vector</desc>
<constructor>true</constructor>
<qlfunction>FloatingRateCouponVector</qlfunction>
<parameters>
    <param>
        <name>scheduleID</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>schedule</desc>
    </param>
    <param>
        <name>nominals</name>
        <type>double</type>
        <tensorrank>vector</tensorrank>
        <desc>coupon nominals</desc>
    </param>
    <param>
        <name>indexID</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>underlying index</desc>
    </param>
    <param default='0'>
        <name>spreads</name>
        <type>double</type>
        <tensorrank>vector</tensorrank>
        <desc>floating rate spreads</desc>
    </param>
</parameters>
<returnval>
    <type>string</type>
    <tensorrank>scalar</tensorrank>
    <desc>handle of newly created object</desc>
</returnval>
</function>

<function>
<name>qlGetLeg</name>
<desc>return coupon details</desc>
<constructor>false</constructor>
<qlfunction>getLeg</qlfunction>
<parameters>
    <param class='CouponVector'>
        <name>handle</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>handle of coupon vector object</desc>
    </param>
    <param ignore='yes'>
        <name>trigger</name>
        <type>any</type>
        <tensorrank>scalar</tensorrank>
        <desc>dependency tracking trigger</desc>
    </param>
</parameters>
<returnval>
    <type>double</type>
    <tensorrank>matrix</tensorrank>
    <desc>coupon details</desc>
</returnval>
</function>

<function>
<name>qlGetBPS</name>
<desc>basis point sensitivity</desc>
<constructor>false</constructor>
<qlfunction>getBPS</qlfunction>
<parameters>
    <param class='CouponVector'>
        <name>handle</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>handle of coupon vector object</desc>
    </param>
    <param>
        <name>termStructureID</name>
        <type>string</type>
        <tensorrank>scalar</tensorrank>
        <desc>discounting term structure</desc>
    </param>    
    <param ignore='yes'>
        <name>trigger</name>
        <type>any</type>
        <tensorrank>scalar</tensorrank>
        <desc>dependency tracking trigger</desc>
    </param>
</parameters>
<returnval>
    <type>double</type>
    <tensorrank>scalar</tensorrank>
    <desc>BPS</desc>
</returnval>
</function>

</functions>
</functiongroup>

