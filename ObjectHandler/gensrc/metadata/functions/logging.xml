
<Category name='logging'>
  <description>logging functions.</description>
  <displayName>Logging Functions</displayName>
  <xlFunctionWizardCategory>ObjectHandler</xlFunctionWizardCategory>
  <addinIncludes>
    <include>oh/utilities.hpp</include>
  </addinIncludes>

